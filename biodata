#include <stdio.h>

int main() {
    char nama[50];
    int umur;
    char hobi[50];
    int pilihan;

    do {
        printf("=== Menu ===\n");
        printf("1. Input Biodata\n");
        printf("2. Tampilkan Biodata\n");
        printf("3. Keluar\n");
        printf("Pilih menu: ");
        scanf("%d", &pilihan);
        getchar(); 

        if (pilihan == 1) {
            printf("Masukkan Nama: ");
            fgets(nama, sizeof(nama), stdin);
            printf("Masukkan Umur: ");
            scanf("%d", &umur);
            getchar();
            printf("Masukkan Hobi: ");
            fgets(hobi, sizeof(hobi), stdin);
            printf("Data berhasil disimpan!\n");
        } else if (pilihan == 2) {
            printf("\n--- Biodata ---\n");
            printf("Nama : %s", nama);
            printf("Umur : %d\n", umur);
            printf("Hobi : %s", hobi);
            printf("----------------\n");
        } else if (pilihan == 3) {
            printf("Keluar dari program.\n");
        } else {
            printf("Pilihan tidak valid.\n");
        }

        printf("\n");
    } while (pilihan != 3);

    return 0;
}
